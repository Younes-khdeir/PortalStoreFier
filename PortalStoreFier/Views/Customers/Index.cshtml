@model IEnumerable<PortalStoreFier.Models.Customer>

@{
    ViewData["Title"] = "All Customers";
}

<h1>All Customers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CompanyLogo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Classification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkplaceCity)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Employee_Name)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.CompanyLogo)*@
                @if (!string.IsNullOrEmpty(item.CompanyLogo))
                {
                    <img src="@item.CompanyLogo" alt="Post Design" style="max-width: 70px;" />
                }
                else
                {
                    <span>No Design</span>
                }
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Classification.ClassificationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkplaceCity)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Employee_Name)
            </td>
            
            <td>
                <a asp-controller="RelationManagements" asp-action="IndexCustomer" asp-route-id="@item.Id">RM</a> |
                <a asp-controller="CustomerActivities" asp-action="IndexCustomer" asp-route-id="@item.Id">CustomerActivity</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
@*                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
*@            </td>
        </tr>
}
    </tbody>
</table>
